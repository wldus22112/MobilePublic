<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00b0d4"
            android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00668a"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:weightSum="10"
            android:padding="7dp"

            android:id="@+id/report_type_water"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/water"
                android:layout_weight="7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="수질분야"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_weight="3"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00668a"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"

            android:padding="7dp"

            android:weightSum="10"
            android:id="@+id/report_type_air"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/air"
                android:layout_weight="7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="대기분야"

                android:gravity="center"
                android:textSize="13dp"
                android:layout_weight="3"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="#00668a"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"

            android:padding="7dp"

            android:weightSum="10"
            android:id="@+id/report_type_etc"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/etc"
                android:layout_weight="7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_weight="3"
                android:text="기타"
                />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/report_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#00668a"
                android:text="신고정보"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/border_report_form">

                <TextView
                    android:id="@+id/text_report1"
                    android:textStyle="bold"
                    android:text="신고 제목"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="#fafafb"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/report_info_title"
                    android:layout_weight="1"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/border_report_form">

                <TextView
                    android:id="@+id/text_report3"
                    android:textStyle="bold"
                    android:text="신고 일자"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="#fafafb"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:id="@+id/report_info_date"
                    android:layout_weight="1"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/border_report_form">

                <TextView
                    android:id="@+id/text_report5"
                    android:textStyle="bold"
                    android:text="신고 장소"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="#fafafb"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/report_info_addr"
                    android:layout_weight="1"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/border_report_form">

                <TextView
                    android:id="@+id/text_report7"
                    android:textStyle="bold"
                    android:text="신고 내용"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="#fafafb"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/report_info_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d7d7d7"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/report_info_Image"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#00698c">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textSize="22dp"
                    android:text="      처리중"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/report_info_state"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bell"
                    />





            </LinearLayout>


        </LinearLayout>




    </LinearLayout>



</RelativeLayout>